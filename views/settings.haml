.grid_8.push_2
	.box
		%h1= @page_title
		%p Manage your account details:
		%form#settings{:action => '/settings', :method => 'post'}
			%p
				%label
					%span Name
					%input#settingsName{:type => 'text', :name => 'name', :value => "#{@user[:name]}", :maxlength => '67'}

			%p
				%label
					%span Email Address
					%input#settingsEmail{:type => 'email', :name => 'email', :value => "#{@user[:email]}", :maxlength => '67'}

			%p Change your password
			%p
				%label
					%span New Password
					%input{:type => 'password', :name => 'password', :maxlength => '67'}

			%p
				%label
					%span Repeat
					%input{:type => 'password', :name => 'repassword', :maxlength => '67'}

			%input{:type => 'submit', :value => 'Save changes'}